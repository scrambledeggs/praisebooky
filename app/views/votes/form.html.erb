<h1>New post</h1>

<%= form_for Vote.new do |f| %>
  <p>
    <%= f.label "user_id" %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </p>
  <p>
    <%= f.label :department_id %><br />
    <%= f.text_area :department_id %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

