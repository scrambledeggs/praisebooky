<div class="container">
  <main role="main" class="col-md-12 ml-sm-auto col-lg-12 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">RECENT ACTIVITY</h1>
      <div class="btn-toolbar mb-2 mb-md-0"></div>
    </div>

    <div class="table-responsive">
      <table class="table table-inbox table-hover table-striped table-sm">
        <thead>
          <tr>
            <th><center>Giver</center></th>
            <th><center>Receiver</center></th>
            <th><center>Points</center></th>
            <th><center>Comment</center></th>
            <th><center>Time</center></th>
          </tr>
        </thead>
        <tbody>
          <% @votes.each do |vote| %>
            <tr>
              <td>
                <center><%= User.find(vote.user_id).first_name %></center>
              </td>
              <td>
               <center><%= User.find(vote.receiver_id).first_name %></center>
              </td>
              <td>
                <center><%= vote.point %></center>
              </td>
              <td>
                <center><%= truncate(vote.comment) %></center>
              </td>
              <td>
                <center><%= vote.created_at %></center>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>
  </main>
</div>
